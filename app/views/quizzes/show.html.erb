<main class="container">
    <section class="quiz_show_header page_header">
        <h1><%= @quiz.title %></h1>
        <h2><%= @quiz.description %></h2>
    </section>
    <section class="quiz_show_body page_body">
        <button>
            <%= link_to "Start Quiz", quiz_play_path(@quiz) %>
        </button>
    </section>
    <section class="quiz_show_footer page_footer">
        <% if is_admin? %>
            <button>
                <%= link_to "Edit Quiz", edit_quiz_path(@quiz)%>
            </button>
            <button>
                <%= link_to "Delete Quiz", quiz_path(@quiz), method: :delete %>
            </button>
            <button>
                <%= link_to "Back to Unit", edit_unit_path(@quiz.unit)%>
            </button>
        <% else %>
            <button>
                <%= link_to "Back to Unit", unit_path(@quiz.unit)%>
            </button>
        <% end %>
    </section>
</main>